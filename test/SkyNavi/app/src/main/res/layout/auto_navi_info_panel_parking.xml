<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@id/rl_unfold_view"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/auto_bg_navi_panel_shadow"
            android:paddingBottom="@dimen/auto_dimen2_13"
            android:paddingLeft="@dimen/auto_dimen2_10"
            android:paddingRight="@dimen/auto_dimen2_10"
            android:paddingTop="@dimen/auto_dimen2_7">

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="@dimen/auto_dimen2_190"
                android:background="@drawable/auto_bg_out_sytle_day"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@id/ll_parking_index"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/auto_dimen2_24"
                    android:layout_marginRight="@dimen/auto_dimen2_24"
                    android:layout_marginTop="@dimen/auto_dimen2_24"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal"
                    android:visibility="visible">

                    <RelativeLayout
                        android:id="@id/ll_parking_1"
                        android:layout_width="0.0dip"
                        android:layout_height="@dimen/auto_dimen2_50"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1.0"
                        android:background="@drawable/auto_bg_navi_parking_index_selector_day"
                        android:gravity="center_horizontal"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@id/auto_parking_tv_1_p"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="P"
                            android:textColor="@color/auto_bg_navi_parking_font_selector_day"
                            android:textSize="@dimen/auto_font_size_30"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignBaseline="@id/auto_parking_tv_1_p"
                            android:layout_toRightOf="@id/auto_parking_tv_1_p"
                            android:text="1"
                            android:textColor="@color/auto_bg_navi_parking_font_selector_day"
                            android:textSize="@dimen/auto_font_size_24" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@id/ll_parking_2"
                        android:layout_width="0.0dip"
                        android:layout_height="@dimen/auto_dimen2_50"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/auto_dimen2_12"
                        android:layout_weight="1.0"
                        android:background="@drawable/auto_bg_navi_parking_index_selector_day"
                        android:gravity="center_horizontal"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@id/auto_parking_tv_2_p"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="P"
                            android:textColor="@color/auto_bg_navi_parking_font_selector_day"
                            android:textSize="@dimen/auto_font_size_30"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignBaseline="@id/auto_parking_tv_2_p"
                            android:layout_toRightOf="@id/auto_parking_tv_2_p"
                            android:text="2"
                            android:textColor="@color/auto_bg_navi_parking_font_selector_day"
                            android:textSize="@dimen/auto_font_size_24" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@id/ll_parking_3"
                        android:layout_width="0.0dip"
                        android:layout_height="@dimen/auto_dimen2_50"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/auto_dimen2_12"
                        android:layout_weight="1.0"
                        android:background="@drawable/auto_bg_navi_parking_index_selector_day"
                        android:gravity="center_horizontal"
                        android:orientation="horizontal"
                        android:visibility="visible">

                        <TextView
                            android:id="@id/auto_parking_tv_3_p"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="P"
                            android:textColor="@color/auto_bg_navi_parking_font_selector_day"
                            android:textSize="@dimen/auto_font_size_30"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignBaseline="@id/auto_parking_tv_3_p"
                            android:layout_toRightOf="@id/auto_parking_tv_3_p"
                            android:text="3"
                            android:textColor="@color/auto_bg_navi_parking_font_selector_day"
                            android:textSize="@dimen/auto_font_size_24" />
                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@id/ll_single_parking"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/ll_parking_index"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <TextView
                        android:id="@id/tv_parking_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/auto_dimen2_12"
                        android:paddingRight="@dimen/auto_dimen2_12"
                        android:singleLine="true"
                        android:text="停车场名称"
                        android:textColor="@color/auto_color_586c7f_qrcode"
                        android:textSize="@dimen/auto_font_size_24"
                        android:visibility="gone" />

                    <LinearLayout
                        android:id="@id/ll_parking_content"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/ll_parking_index"
                        android:layout_marginTop="@dimen/auto_dimen2_24"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@id/tv_parking_position"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="地上"
                            android:textColor="@color/auto_color_202025"
                            android:textSize="@dimen/auto_font_size_26" />

                        <TextView
                            android:id="@id/tv_line"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/auto_dimen2_12"
                            android:layout_marginRight="@dimen/auto_dimen2_12"
                            android:background="@drawable/auto_ic_navi_parking_diliver" />

                        <TextView
                            android:id="@id/tv_hint"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/auto_dimen2_12"
                            android:text="@string/autonavi_search_result_to_dest_dis"
                            android:textColor="@color/auto_color_202025"
                            android:textSize="@dimen/auto_font_size_26" />

                        <TextView
                            android:id="@id/tv_parking_distance"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:singleLine="true"
                            android:text="500米"
                            android:textColor="@color/auto_color_3197f1"
                            android:textSize="@dimen/auto_font_size_26" />
                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@id/ll_parking_setting"
            android:layout_width="@dimen/auto_dimen2_234"
            android:layout_height="@dimen/auto_dimen2_68"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/auto_dimen2_160"
            android:background="@drawable/auto_navi_go_on_navi_color_selector"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@id/iv_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/auto_dimen2_24"
                android:src="@drawable/auto_ic_navi_parking_car" />

            <TextView
                android:id="@id/tv_parking_here"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/auto_dimen2_12"
                android:layout_marginLeft="@dimen/auto_dimen2_12"
                android:layout_marginRight="@dimen/auto_dimen2_24"
                android:layout_marginTop="@dimen/auto_dimen2_12"
                android:text="@string/auto_parking_here"
                android:textColor="@color/auto_color_ffffff"
                android:textSize="@dimen/auto_font_size_26" />
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:id="@id/rl_fold_view"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/auto_bg_navi_panel_shadow"
        android:paddingBottom="@dimen/auto_dimen2_13"
        android:paddingLeft="@dimen/auto_dimen2_10"
        android:paddingRight="@dimen/auto_dimen2_10"
        android:paddingTop="@dimen/auto_dimen2_7"
        android:visibility="gone">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="@dimen/auto_dimen2_90"
            android:background="@drawable/auto_bg_out_sytle_day"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginBottom="@dimen/auto_dimen2_12"
                android:layout_marginLeft="@dimen/auto_dimen2_24"
                android:layout_marginTop="@dimen/auto_dimen2_12"
                android:src="@drawable/auto_ic_navi_parking_sign" />

            <ImageView
                android:id="@id/auto_navi_panel_parking_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="@dimen/auto_dimen2_8"
                android:src="@drawable/directions_more_down_black" />

            <TextView
                android:id="@id/tv_parking_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/auto_dimen2_24"
                android:background="@drawable/auto_ic_navi_parking_number"
                android:gravity="center"
                android:text=""
                android:textColor="@color/auto_color_202025"
                android:textSize="@dimen/auto_font_size_24" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>