<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:autoSkin="http://schemas.android.com/apk/res-auto"
    android:id="@id/auto_traffic_detail_layout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/auto_dimen2_30"
        android:orientation="horizontal">

        <com.autonavi.skin.view.SkinImageView
            android:id="@id/iv_auto_traffic_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:scaleType="center"
            android:src="@drawable/auto_traffic_11011"
            autoSkin:src4Skin="@drawable/auto_traffic_11011" />

        <com.autonavi.skin.view.SkinTextView
            android:id="@id/tv_auto_traffic_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/auto_dimen2_20"
            android:text="@string/poicard_traffic_11011"
            android:textColor="@color/auto_color_212125_night_white"
            android:textSize="@dimen/auto_font_size_30"
            autoSkin:textColor4Night="@color/auto_color_212125_night_white_night"
            autoSkin:textColor4Skin="@color/auto_color_212125_night_white" />
    </LinearLayout>

    <TextView
        android:id="@id/tv_auto_traffic_eta_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/auto_dimen2_30"
        android:layout_marginRight="@dimen/auto_dimen2_30"
        android:layout_marginTop="@dimen/auto_dimen2_30"
        android:textColor="@color/auto_color_212125"
        android:textSize="@dimen/auto_font_size_22" />

    <com.autonavi.skin.view.SkinView
        android:layout_width="fill_parent"
        android:layout_height="@dimen/auto_dimen2_1"
        android:layout_marginLeft="@dimen/auto_dimen2_8"
        android:layout_marginRight="@dimen/auto_dimen2_8"
        android:layout_marginTop="@dimen/auto_dimen2_30"
        android:background="@color/auto_color_d5d5d5"
        autoSkin:background4Skin="@color/auto_color_d5d5d5" />

    <com.autonavi.skin.view.SkinTextView
        android:id="@id/tv_auto_traffic_detail_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/auto_dimen2_30"
        android:layout_marginRight="@dimen/auto_dimen2_30"
        android:layout_marginTop="@dimen/auto_dimen2_30"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/auto_color_586c7f"
        android:textSize="@dimen/auto_font_size_20"
        autoSkin:textColor4Skin="@color/auto_color_586c7f" />

    <com.autonavi.skin.view.SkinTextView
        android:id="@id/tv_auto_traffic_start_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/auto_dimen2_30"
        android:layout_marginRight="@dimen/auto_dimen2_30"
        android:layout_marginTop="@dimen/auto_dimen2_12"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/auto_color_586c7f"
        android:textSize="@dimen/auto_font_size_20"
        autoSkin:textColor4Skin="@color/auto_color_586c7f" />

    <com.autonavi.skin.view.SkinTextView
        android:id="@id/tv_auto_traffic_end_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/auto_dimen2_30"
        android:layout_marginRight="@dimen/auto_dimen2_30"
        android:layout_marginTop="@dimen/auto_dimen2_12"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/auto_color_586c7f"
        android:textSize="@dimen/auto_font_size_20"
        autoSkin:textColor4Skin="@color/auto_color_586c7f" />

    <com.autonavi.skin.view.SkinTextView
        android:id="@id/tv_auto_traffic_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/auto_dimen2_30"
        android:layout_marginRight="@dimen/auto_dimen2_30"
        android:layout_marginTop="@dimen/auto_dimen2_30"
        android:ellipsize="end"
        android:maxLines="2"
        android:textColor="@color/auto_color_586c7f"
        android:textSize="@dimen/auto_font_size_20"
        autoSkin:textColor4Skin="@color/auto_color_586c7f" />

    <TextView
        android:id="@id/tv_auto_traffic_source"
        android:layout_width="wrap_content"
        android:layout_height="0.0dip"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/auto_dimen2_20"
        android:layout_weight="1.0"
        android:ellipsize="end"
        android:gravity="bottom"
        android:maxLines="1"
        android:textColor="@color/auto_color_b4c4d9"
        android:textSize="@dimen/auto_font_size_20" />
</LinearLayout>