<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/auto_bg_out_sytle_day"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/auto_dimen2_155"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0.0dip"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/auto_dimen2_24"
            android:layout_weight="1.0"
            android:orientation="horizontal"
            android:visibility="visible">

            <LinearLayout
                android:id="@+id/ll_distance"
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1.0"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_next_road_distance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/auto_dimen2_2"
                        android:singleLine="true"
                        tools:text="300"
                        android:textColor="@color/auto_color_202025"
                        android:textSize="@dimen/auto_font_size_48" />

                    <TextView
                        android:id="@+id/tv_next_road_after"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@id/tv_next_road_distance"
                        android:text="米后"
                        android:textColor="@color/auto_color_202025"
                        android:textSize="@dimen/auto_font_size_24"
                        android:visibility="visible" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_next_road_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="厦门市思明区"
                    android:textColor="@color/auto_color_202025"
                    android:textSize="@dimen/auto_font_size_24"
                    android:visibility="visible" />
            </LinearLayout>

            <ImageView
                android:id="@+id/iv_navigation_direction"
                android:layout_width="@dimen/auto_dimen2_100"
                android:layout_height="@dimen/auto_dimen2_100"
                android:layout_alignParentRight="true"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="@dimen/auto_dimen2_12"
                android:contentDescription="@string/app_name"
                android:gravity="right" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_exit"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/auto_dimen2_45"
            android:layout_marginLeft="@dimen/auto_dimen2_24"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:id="@+id/tv_exit_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/auto_dimen2_10"
                android:background="@drawable/auto_bg_navi_exit_num"
                android:paddingLeft="@dimen/auto_dimen2_5"
                android:paddingRight="@dimen/auto_dimen2_5"
                tools:text="出口B"
                android:textColor="@color/auto_color_white"
                android:textSize="@dimen/auto_font_size_22" />

            <TextView
                android:id="@+id/tv_exit_direction"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                tools:text="福州 泉州 泉州 泉州 泉州 泉州 泉州 泉州 泉州"
                android:textColor="@color/auto_color_202025"
                android:textSize="@dimen/auto_font_size_24" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_eta"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/auto_dimen2_55"
        android:layout_marginLeft="@dimen/auto_dimen2_1"
        android:layout_marginRight="@dimen/auto_dimen2_1"
        android:background="@drawable/auto_bg_navi_eta_day"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/remaining_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/auto_dimen2_8"
            android:layout_marginTop="@dimen/auto_dimen2_1"
            android:text="@string/navi_eta_remain"
            android:textColor="@color/auto_color_586c7f"
            android:textSize="@dimen/auto_font_size_20" />

        <TextView
            android:id="@+id/remaining_distance_landscape"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/auto_dimen2_1"
            android:gravity="right"
            android:singleLine="true"
            tools:text="5760公里"
            android:textColor="@color/auto_color_202025"
            android:textSize="@dimen/auto_font_size_26" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/auto_dimen_6"
            android:layout_marginRight="@dimen/auto_dimen_6"
            android:layout_marginTop="@dimen/auto_dimen2_1"
            android:src="@drawable/auto_ic_navi_eta_2d_point" />

        <TextView
            android:id="@+id/remaining_time_landscape"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/auto_dimen2_1"
            android:gravity="left"
            android:singleLine="true"
            tools:text="13小时20分钟"
            android:textColor="@color/auto_color_202025"
            android:textSize="@dimen/auto_font_size_26" />
    </LinearLayout>
</LinearLayout>