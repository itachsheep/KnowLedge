<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/auto_bg_navi_panel_shadow"
        android:orientation="vertical"
        android:paddingBottom="@dimen/auto_dimen2_13"
        android:paddingLeft="@dimen/auto_dimen2_10"
        android:paddingRight="@dimen/auto_dimen2_10"
        android:paddingTop="@dimen/auto_dimen2_7">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="@dimen/auto_dimen2_190"
            android:background="@drawable/auto_bg_out_sytle_day"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <LinearLayout
                android:id="@id/ll_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/auto_dimen2_12"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@id/iv_search_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/auto_navi_panel_search_atm" />

                <TextView
                    android:id="@id/tv_search_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/auto_dimen2_12"
                    android:singleLine="true"
                    android:text="中石化加油站"
                    android:textColor="@color/auto_color_202025"
                    android:textSize="@dimen/auto_font_size_30" />
            </LinearLayout>

            <TextView
                android:id="@id/tv_search_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/ll_title"
                android:layout_centerHorizontal="true"
                android:paddingLeft="@dimen/auto_dimen2_48"
                android:paddingRight="@dimen/auto_dimen2_48"
                android:paddingTop="@dimen/auto_dimen2_6"
                android:singleLine="true"
                android:textColor="@color/auto_color_586c7f_qrcode"
                android:textSize="@dimen/auto_font_size_24" />

            <TextView
                android:id="@id/tv_search_distance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_search_name"
                android:layout_centerHorizontal="true"
                android:paddingTop="@dimen/auto_dimen2_6"
                android:singleLine="true"
                android:text="500米"
                android:textColor="@color/auto_color_3197f1"
                android:textSize="@dimen/auto_font_size_30" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@id/tv_search_setting"
        android:layout_width="@dimen/auto_dimen2_234"
        android:layout_height="@dimen/auto_dimen2_68"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/auto_dimen2_160"
        android:background="@drawable/auto_navi_go_on_navi_color_selector"
        android:gravity="center"
        android:text="设为途经点"
        android:textColor="@color/auto_color_ffffff"
        android:textSize="@dimen/auto_font_size_26" />
</RelativeLayout>