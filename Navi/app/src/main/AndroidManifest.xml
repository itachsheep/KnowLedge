<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.skyworth.navi" >



    <application
        android:allowBackup="true"
        android:icon="@mipmap/skyworth"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/skyworth"
        android:supportsRtl="true"
        android:theme="@android:style/Theme.Light" >
        <!--@style/AppTheme-->
        <meta-data
            android:name="com.amap.api.v2.apikey"
            android:value="13411eca827193b5bb5ab1930f5c4095"/>

        <activity android:name="main.MainActivity"
            android:configChanges="keyboardHidden|orientation|screenSize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <!--rocker-->
        <activity android:name="rocker.RockerActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:screenOrientation="landscape"
            />
        <activity android:name="rocker.MapRockerActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:screenOrientation="landscape"/>
        <!--地图相关-->
        <activity android:name="map_.activity.MapMainActivity"/>
        <activity android:name="map_.activity.MapImpMethodActivity"/>
        <activity android:name="map_.activity.BaseMapFragmentActivity"/>
        <activity android:name="map_.activity.TextureMapViewActivity"/>
        <!--导航相关-->
        <activity android:name="navi_.activity.NaviMainActivity"/>
        <activity android:name="navi_.activity.ComponentActivity"/>
        <activity android:name="navi_.activity.DriverListActivity"/>
        <activity android:name="navi_.activity.SingleRouteCalculateActivity"/>
        <activity android:name="navi_.navi.BaseActivity"/>
        <activity android:name="navi_.activity.RestRouteShowActivity"/>
        <activity android:name="navi_.activity.RouteNaviActivity"/>
        <activity android:name="navi_.activity.GPSNaviActivity"/>
        <activity android:name="navi_.customui.CustomDirectionViewActivity"/>
        <activity android:name="navi_.customui.OverviewModeActivity"/>
        <activity android:name="navi_.customui.CustomTrafficButtonViewActivity"/>
        <activity android:name="navi_.customui.CustomUiActivity"/>
        <activity android:name="navi_.customui.NorthModeActivity"/>
        <activity android:name="navi_.customui.CustomCarActivity"/>
        <activity android:name="navi_.customui.CustomRouteActivity"/>
        <activity android:name="navi_.customui.CustomNextTurnTipViewActivity"/>
        <activity android:name="navi_.customui.CustomRouteTextureInAMapNaviViewActivity"/>
        <activity android:name="navi_.customui.CustomZoomButtonViewActivity"/>
        <activity android:name="navi_.customui.CustomZoomInIntersectionViewActivity"/>
        <activity android:name="navi_.customui.CustomTrafficBarViewActivity"/>

        <!--高德-->
        <activity
            android:name="com.amap.api.navi.AmapRouteActivity"
            android:configChanges="orientation|keyboardHidden|screenSize" />
    </application>

    <!--用于访问网络，网络定位需要上网-->
    <uses-permission android:name="android.permission.INTERNET" />
    <!--写入扩展存储，向扩展卡写入数据，用于写入缓存定位数据-->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <!--用于进行网络定位-->
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <!--获取运营商信息，用于支持提供运营商信息相关的接口-->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <!--用于访问GPS定位-->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <!--用于读取手机当前的状态-->
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <!--用于访问wifi网络信息，wifi信息会用于进行网络定位-->
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <!--这个权限用于获取wifi的获取权限，wifi信息会用来进行网络定位-->
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
    <!--这个权限用于允许程序在手机屏幕关闭后后台进程仍然运行-->
    <uses-permission android:name="android.permission.WAKE_LOCK"/>
    <uses-permission android:name="android.permission.WRITE_SETTINGS"/>

</manifest>