<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.tao.styleattrlearndemo.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"

        />

    <com.tao.styleattrlearndemo.CustomView
        android:layout_width="200dip"
        android:layout_height="100dip"
        custom:customText="哈哈 custom text!"
        android:text="哈哈 android text!"
        android:textColor="#fff"
        custom:noStyleableText="哈哈 noStyleableText！"
        />

    <com.tao.styleattrlearndemo.MyCustomView
        android:layout_width="200dp"
        android:layout_height="100dp"
        custom:custom_attr1="attr1_xml"
        style="@style/MyCustomViewStyle"
        />
<!--style="@style/MyCustomViewStyle"-->
</LinearLayout>
