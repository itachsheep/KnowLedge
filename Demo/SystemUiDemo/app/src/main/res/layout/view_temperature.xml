<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:orientation="horizontal">
<ImageView
    android:id="@+id/iv_temp1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:src="@drawable/tmp_1"/>
<ImageView
    android:id="@+id/iv_temp2"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:src="@drawable/tmp_8"/>
 <LinearLayout
     android:id="@+id/ll_dot"
     android:visibility="gone"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:orientation="horizontal">
     <ImageView
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:src="@drawable/tmp_dot"/>
     <ImageView
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:src="@drawable/tmp_5"/>
 </LinearLayout>

<ImageView
    android:id="@+id/iv_temp_icon"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:src="@drawable/tmp_icon"/>
</LinearLayout>