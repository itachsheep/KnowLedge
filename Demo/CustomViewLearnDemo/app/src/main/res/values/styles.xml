<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <declare-styleable name="ClipDrawView">
        <attr name="cdvSrc" format="reference"></attr>
    </declare-styleable>

    <declare-styleable name="ClipPartView">
        <attr name="cpvSrc" format="reference"></attr>
        <attr name="cpvStyle" format="integer"></attr>
    </declare-styleable>
    <!--android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/atmos_part1"
        android:visibility="invisible"-->
    <style name="atmosphere_image">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:visibility">invisible</item>
    </style>

    <style name="pattern_image">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:visibility">invisible</item>
    </style>
</resources>
