<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.tao.customviewlearndemo.activity.SectorViewActivity">



    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ac_knob_bg" />

        <com.tao.customviewlearndemo.view.SectorView
            android:id="@+id/sectorView"
            android:layout_width="200dp"
            android:layout_height="400dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            app:roundColor="#D1D1D1"
            app:roundProgressColor="@android:color/black"
            app:roundWidth="10dp"
            app:textColor="#9A32CD"
            app:textIsDisplayable="false"
            app:textSize="18sp" />

        <com.tao.customviewlearndemo.view.TransView
            android:id="@+id/imgPower"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ac_knob_power_off" />
    </RelativeLayout>


</LinearLayout>
