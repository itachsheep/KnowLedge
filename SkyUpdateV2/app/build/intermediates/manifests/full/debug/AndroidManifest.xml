<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.skyworthdigital.upgrade"
    android:persistent="true"
    android:sharedUserId="android.uid.system"
    android:versionCode="10209"
    android:versionName="1.2.9" >

    <uses-sdk
        android:minSdkVersion="9"
        android:targetSdkVersion="23" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="com.skyworthdigital.upgrade.contentProvider.write" />
    <uses-permission android:name="android.Manifest.permission.BROADCAST_STICKY" />

    <permission
        android:name="com.skyworthdigital.upgrade.contentProvider.write"
        android:label="provider pomission"
        android:protectionLevel="normal" />

    <application
        android:name="com.skyworthdigital.upgrade.UpgradeApp"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.skyworthdigital.upgrade.MainActivity"
            android:label="@string/app_name" >

            <!--
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            -->
        </activity>

        <service android:name="com.skyworthdigital.upgrade.service.UpgradeService" >
            <intent-filter>
                <action android:name="skyworthdigital.intent.action.Upgrade_SERVICE" />
            </intent-filter>
        </service>

        <receiver android:name="com.skyworthdigital.upgrade.service.UpgradeReceiver" >
            <intent-filter android:priority="1000" >
                <action android:name="android.intent.action.BOOT_COMPLETED" />
                <action android:name="android.net.conn.CONNECTIVITY_CHANGE" />
            </intent-filter>
        </receiver>

        <provider
            android:name="com.skyworthdigital.upgrade.provider.UpgradeProvider"
            android:authorities="com.skyworthdigital.upgrade"
            android:exported="true"
            android:writePermission="com.skyworthdigital.upgrade.contentProvider.write" />
    </application>

</manifest>