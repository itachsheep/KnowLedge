<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_search_head"
    android:layout_width="fill_parent"
    android:layout_height="@dimen/auto_search_common_title_height"
    android:layout_alignParentTop="true"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0.0dip"
        android:layout_weight="1.0"
        android:background="@drawable/auto_search_title_top_all_radius_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <include
            android:id="@+id/btn_search_back"
            layout="@layout/search_back" />

        <include layout="@layout/search_switch_city_btn_layout" />

        <EditText
            android:id="@+id/search_search_layout"
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="1.0"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="@string/save_search_hint"
            android:imeOptions="flagNoFullscreen|actionSearch"
            android:paddingLeft="@dimen/auto_search_text_title_padding"
            android:singleLine="true"
            android:textColorHint="@color/auto_color_9eaebd"
            android:textCursorDrawable="@drawable/auto_edit_cursor"
            android:textSize="@dimen/auto_search_common_text_title_textsize" />

        <TextView
            android:id="@+id/btn_search"
            style="@style/auto_search_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/auto_search_title_search_btn_margin_right"
            android:focusable="true"/>
    </LinearLayout>

    <View
        android:id="@+id/auto_search_title_bottom_divider"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/auto_dimen2_1"
        android:background="@color/auto_color_divider_line" />
</LinearLayout>