<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:autoSkin="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/auto_bg_navi_panel_shadow"
        android:paddingBottom="@dimen/auto_dimen2_13"
        android:paddingLeft="@dimen/auto_dimen2_10"
        android:paddingRight="@dimen/auto_dimen2_10"
        android:paddingTop="@dimen/auto_dimen2_7">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="@dimen/auto_dimen2_190"
            android:background="@drawable/auto_bg_out_sytle_day"
            android:orientation="vertical">

            <LinearLayout
                android:id="@id/ll_avoid_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/auto_dimen2_24"
                android:orientation="horizontal">

                <ImageView
                    android:id="@id/auto_bottom_avoid_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/auto_ic_navi_jam_sign" />

                <TextView
                    android:id="@id/tv_avoid_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/auto_dimen2_12"
                    android:gravity="center"
                    android:text="前方拥堵"
                    android:textColor="@color/auto_color_202025"
                    android:textSize="@dimen/auto_font_size_30" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/auto_dimen2_12"
                android:gravity="center"
                android:text="有更快线路"
                android:textColor="@color/auto_color_586c7f_qrcode"
                android:textSize="@dimen/auto_font_size_24" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/auto_dimen2_6"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="能为您节省"
                    android:textColor="@color/auto_color_202025"
                    android:textSize="@dimen/auto_font_size_26" />

                <TextView
                    android:id="@id/tv_avoid_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/auto_dimen2_12"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text="10分钟"
                    android:textColor="@color/auto_color_3197f1"
                    android:textSize="@dimen/auto_font_size_26" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/auto_dimen2_163"
        android:orientation="horizontal">

        <Button
            android:id="@id/tv_avoid_ignore"
            android:layout_width="@dimen/auto_dimen2_132"
            android:layout_height="wrap_content"
            android:background="@drawable/auto_bg_btn_left_selector"
            android:text="忽略"
            android:textColor="@color/auto_color_white"
            android:textSize="@dimen/auto_font_size_26" />

        <Button
            android:id="@id/tv_avoid_setting"
            android:layout_width="@dimen/auto_dimen2_132"
            android:layout_height="wrap_content"
            android:background="@drawable/auto_bg_btn_right_selector"
            android:text="避开"
            android:textColor="@color/auto_color_white"
            android:textSize="@dimen/auto_font_size_26" />
    </LinearLayout>
</RelativeLayout>