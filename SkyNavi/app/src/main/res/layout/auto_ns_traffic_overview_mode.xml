<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/auto_dimen2_12"
        android:layout_marginTop="@dimen/auto_dimen2_12"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <View
            android:layout_width="@dimen/auto_dimen2_3"
            android:layout_height="@dimen/auto_dimen2_20"
            android:layout_marginRight="@dimen/auto_dimen2_11"
            android:background="@color/auto_color_0091ff" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/auto_ns_traffic_mode"
            android:textColor="@drawable/small_map_textcolor_selector"
            android:textSize="@dimen/auto_font_size_26" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/auto_bg_ns_out_sytle_inner_day"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginTop="@dimen/auto_dimen2_24">

                <LinearLayout
                    android:id="@id/overview_small_map"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/auto_dimen2_24"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <ImageButton
                        android:id="@id/auto_ic_overview_small_map_select"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:src="@drawable/auto_ic_overview_small_map" />

                    <TextView
                        android:id="@id/auto_ic_overview_small_map_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/auto_dimen2_12"
                        android:layout_marginTop="@dimen/auto_dimen2_12"
                        android:text="@string/auto_ns_overview_small_map"
                        android:textColor="@drawable/small_map_textcolor_selector"
                        android:textSize="@dimen/auto_font_size_26" />
                </LinearLayout>

                <LinearLayout
                    android:id="@id/traffic_small_map"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/auto_dimen2_24"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <ImageButton
                        android:id="@id/auto_ic_traffic_small_map_select"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:src="@drawable/auto_ic_traffic_small_map" />

                    <TextView
                        android:id="@id/auto_ic_traffic_small_map_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/auto_dimen2_12"
                        android:layout_marginTop="@dimen/auto_dimen2_12"
                        android:text="@string/auto_ns_traffic_small_map"
                        android:textColor="@drawable/small_map_textcolor_selector_night"
                        android:textSize="@dimen/auto_font_size_26" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_width="0.0dip"
                android:layout_height="fill_parent"
                android:layout_gravity="right"
                android:layout_marginRight="@dimen/auto_dimen2_28"
                android:layout_weight="1.0"
                android:gravity="center|right"
                android:lines="1"
                android:text="@string/auto_navi_ns_overview_mode_info"
                android:textColor="@color/auto_color_586c7f"
                android:textSize="@dimen/auto_font_size_20" />
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="@dimen/auto_dimen2_1"
            android:background="@color/auto_color_dde5f0" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="@dimen/auto_dimen2_110"
            android:gravity="center_vertical">

            <LinearLayout
                android:layout_width="0.0dip"
                android:layout_height="@dimen/auto_dimen2_60"
                android:layout_marginLeft="@dimen/auto_dimen2_24"
                android:layout_marginRight="@dimen/auto_dimen2_24"
                android:layout_weight="1.0"
                android:background="@drawable/auto_bg_checkbox_selector">

                <RelativeLayout
                    android:id="@id/auto_ns_daynight_mode_auto"
                    android:layout_width="0.0dip"
                    android:layout_height="fill_parent"
                    android:layout_weight="1.0"
                    android:background="@drawable/auto_bg_inner_checkbox_selector">

                    <TextView
                        android:id="@id/auto_ns_daynight_mode_auto_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="@string/auto_navi_daynight_mode_auto"
                        android:textColor="@drawable/auto_ns_textcolor_selector"
                        android:textSize="@dimen/auto_font_size_24" />

                    <ImageView
                        android:id="@id/auto_ns_daynight_mode_auto_radio"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@id/auto_ns_daynight_mode_auto_txt"
                        android:src="@drawable/auto_ic_check_radio" />
                </RelativeLayout>

                <View
                    android:id="@id/ns_separator_left"
                    android:layout_width="@dimen/auto_dimen2_2"
                    android:layout_height="fill_parent"
                    android:background="@color/auto_color_7b899d"
                    android:visibility="invisible" />

                <RelativeLayout
                    android:id="@id/auto_ns_daynight_mode_day"
                    android:layout_width="0.0dip"
                    android:layout_height="fill_parent"
                    android:layout_weight="1.0"
                    android:background="@drawable/auto_bg_inner_checkbox_selector">

                    <TextView
                        android:id="@id/auto_ns_daynight_mode_day_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="@string/auto_navi_daynight_mode_day"
                        android:textColor="@drawable/auto_ns_textcolor_selector"
                        android:textSize="@dimen/auto_font_size_24" />

                    <ImageView
                        android:id="@id/auto_ns_daynight_mode_day_radio"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@id/auto_ns_daynight_mode_day_txt"
                        android:src="@drawable/auto_ic_check_radio" />
                </RelativeLayout>

                <View
                    android:id="@id/ns_separator_right"
                    android:layout_width="@dimen/auto_dimen2_2"
                    android:layout_height="fill_parent"
                    android:background="@color/auto_color_7b899d"
                    android:visibility="invisible" />

                <RelativeLayout
                    android:id="@id/auto_ns_daynight_mode_night"
                    android:layout_width="0.0dip"
                    android:layout_height="fill_parent"
                    android:layout_weight="1.0"
                    android:background="@drawable/auto_bg_inner_checkbox_selector">

                    <TextView
                        android:id="@id/auto_ns_daynight_mode_night_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="@string/auto_navi_daynight_mode_night"
                        android:textColor="@drawable/auto_ns_textcolor_selector"
                        android:textSize="@dimen/auto_font_size_24" />

                    <ImageView
                        android:id="@id/auto_ns_daynight_mode_night_radio"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@id/auto_ns_daynight_mode_night_txt"
                        android:src="@drawable/auto_ic_check_radio" />
                </RelativeLayout>
            </LinearLayout>

            <TextView
                android:id="@id/auto_ns_daynight_mode_info"
                android:layout_width="0.0dip"
                android:layout_height="fill_parent"
                android:layout_weight="1.0"
                android:gravity="center|right"
                android:paddingRight="@dimen/auto_dimen2_28"
                android:text="@string/auto_navi_ns_overview_mode_auto_info"
                android:textColor="@color/auto_color_586c7f"
                android:textSize="@dimen/auto_font_size_20" />
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="@dimen/auto_dimen2_1"
            android:background="@color/auto_color_dde5f0" />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="@dimen/auto_dimen2_110"
            android:gravity="center_vertical">

            <LinearLayout
                android:id="@id/auto_ns_auto_scale"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:gravity="center">

                <TextView
                    android:id="@id/auto_ns_auto_scale_switch"
                    android:layout_width="@dimen/auto_dimen2_128"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/auto_dimen2_24"
                    android:layout_marginRight="@dimen/auto_dimen2_24"
                    android:background="@drawable/auto_ic_checkbox_selector"
                    android:gravity="center"
                    android:paddingBottom="0.0dip"
                    android:paddingLeft="@dimen/auto_dimen2_20"
                    android:paddingRight="@dimen/auto_dimen2_20"
                    android:paddingTop="0.0dip"
                    android:text="@string/auto_setting_status_close"
                    android:textColor="@color/auto_color_white"
                    android:textSize="@dimen/auto_font_size_24" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/auto_navi_ns_auto_scale"
                    android:textColor="@color/auto_color_212125"
                    android:textSize="@dimen/auto_font_size_24" />
            </LinearLayout>

            <TextView
                android:id="@id/auto_ns_auto_scale_info"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/auto_dimen2_28"
                android:gravity="center_vertical"
                android:lines="1"
                android:text="@string/auto_navi_ns_auto_scale_open_info"
                android:textColor="@color/auto_color_586c7f"
                android:textSize="@dimen/auto_font_size_20" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>