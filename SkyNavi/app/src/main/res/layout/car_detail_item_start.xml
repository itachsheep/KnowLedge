<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="0.0dip">

    <LinearLayout
        android:id="@+id/section_name_layout"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/auto_dimen2_80"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/left_frame"
            android:layout_width="@dimen/auto_dimen_50"
            android:layout_height="fill_parent"
            android:layout_marginLeft="@dimen/auto_dimen_10">

            <ImageView
                android:id="@+id/section_name_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:background="@drawable/direction_bus_list_start_point"
                android:contentDescription="@null" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_below="@id/section_name_icon"
                android:layout_centerInParent="true"
                android:background="@drawable/direction_result_line_new"
                android:contentDescription="@null" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/select_area"
                android:layout_width="0.0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.0"
                android:background="@drawable/auto_overview_item_bg"
                android:clickable="false"
                android:focusable="true"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/section_name"
                    style="@style/fromto_bus_result_detail_list_item_textview_station"
                    android:layout_width="0.0dip"
                    android:layout_height="fill_parent"
                    android:layout_weight="1.0"
                    android:background="@drawable/auto_overview_item_bg"
                    android:ellipsize="end"
                    android:minHeight="@dimen/auto_dimen_60"
                    android:singleLine="true"
                    android:text="出发"
                    android:textColor="@color/auto_color_202025"
                    android:textSize="@dimen/auto_font_size_24" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="@dimen/auto_dimen2_160"
                android:layout_height="@dimen/auto_dimen2_64"
                android:layout_marginRight="@dimen/auto_dimen2_10"
                android:gravity="center">

                <TextView
                    android:id="@+id/start_sim_navi"
                    android:layout_width="@dimen/auto_dimen2_130"
                    android:layout_height="@dimen/auto_dimen2_44"
                    android:layout_gravity="center"
                    android:background="@drawable/auto_route_detail_start_sim_selector"
                    android:gravity="center"
                    android:text="@string/auto_route_start_sim_navi"
                    android:textColor="@color/auto_color_5c84b9"
                    android:textSize="@dimen/auto_font_size_22"
                    android:focusable="true"/>
            </LinearLayout>

            <View
                android:id="@+id/line_bottom_id"
                android:layout_width="fill_parent"
                android:layout_height="0.5dip"
                android:layout_alignParentBottom="true"
                android:background="@color/auto_gray_bg_divider"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>