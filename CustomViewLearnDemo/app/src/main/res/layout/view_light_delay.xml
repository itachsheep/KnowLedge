<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"

    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/spr_bg"
        android:layout_width="wrap_content"
        android:layout_height ="wrap_content"
        android:src="@drawable/zm_bg_black"/>

    <com.tao.customviewlearndemo.nview.ClipPartView
        android:id="@+id/spr_cpv_out"
        app:cpvSrc="@drawable/zm_bg_yellow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
         />

    <com.tao.customviewlearndemo.nview.CenterImageView
        android:layout_centerInParent="true"
        android:id="@+id/spr_center_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/zm_center_bg" />
    <com.tao.customviewlearndemo.nview.ClipPartView
        android:layout_centerInParent="true"
        android:id="@+id/spr_cpv_in"
        app:cpvSrc="@drawable/zm_center_pb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    <ImageView
        android:id="@+id/spr_iv_arrow"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/zm_arrow"/>
    <TextView
        android:id="@+id/spr_tv_num"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:text="0s"
        android:textColor="#fff"/>
</RelativeLayout>